---
import ThemeToggle from "../components/ThemeToggle.astro";
import "../styles/base.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "epochapi documentation and API testing" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <a class="skip-link" href="#content">Skip to main content</a>
    <div class="site-shell">
      <header class="site-header" aria-label="Primary">
        <a href="/" aria-label="epochapi home"><strong>epochapi</strong></a>
        <nav aria-label="Site">
          <ul class="nav-list">
            <li><a href="/">Home</a></li>
            <li><a href="/api">API Docs</a></li>
            <li><a href="/use-cases/trusted-time">Use Cases</a></li>
            <li><a href="/accessibility">Accessibility</a></li>
          </ul>
        </nav>
        <ThemeToggle />
      </header>
      <main id="content">
        <slot />
      </main>
      <footer class="muted" style="padding: 2rem 0">
        <p>Spec-first docs generated from <code>openapi.yaml</code>.</p>
      </footer>
    </div>
  </body>
</html>
